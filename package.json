{
    "name": "jiahao-blog",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "format": "pnpm run lint:fix && prettier --write .",
        "format:ci": "pnpm run lint:fix && prettier --write . !.github/**",
        "lint": "eslint . && markdownlint . && zhlint *.md",
        "lint:fix": "eslint --fix . && markdownlint --fix . && zhlint *.md --fix",
        "test:e2e": "playwright test",
        "index": "gis $SITE_URL",
        "build": "astro check && astro build",
        "start": "pnpm run build && astro preview",
        "dev": "astro dev"
    },
    "dependencies": {
        "@astrojs/check": "^0.6.0",
        "@astrojs/mdx": "^3.0.0",
        "@astrojs/react": "^3.3.4",
        "@astrojs/rss": "^4.0.5",
        "@astrojs/sitemap": "^3.1.4",
        "@iconify-json/fluent-emoji-flat": "^1.1.16",
        "@unocss/astro": "^0.60.2",
        "@unocss/reset": "^0.60.2",
        "@unocss/transformer-directives": "^0.60.2",
        "astro": "^4.8.3",
        "dotenv": "^16.4.5",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "sharp": "^0.33.3",
        "typescript": "^5.4.5",
        "unocss": "^0.60.2",
        "vite": "^5.2.11"
    },
    "devDependencies": {
        "@eslint/js": "^9.2.0",
        "@playwright/test": "^1.44.0",
        "@types/node": "^20.12.12",
        "@types/react": "^18.3.2",
        "@types/react-dom": "^18.3.0",
        "eslint": "^8.57.0",
        "eslint-plugin-astro": "^1.2.0",
        "eslint-plugin-react": "^7.34.1",
        "globals": "^15.2.0",
        "google-indexing-script": "^0.0.5",
        "markdownlint-cli": "^0.40.0",
        "prettier": "^3.2.5",
        "prettier-plugin-astro": "^0.13.0",
        "prettier-plugin-toml": "^2.0.1",
        "typescript-eslint": "^7.9.0",
        "zhlint": "^0.8.1"
    },
    "packageManager": "pnpm@9.1.0"
}
