{
    "name": "jiahao-blog",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "format": "markdownlint --fix . && zhlint *.md --fix && prettier --write . && taplo format && eslint --fix .",
        "measure": "hugo --templateMetrics --templateMetricsHints",
        "measure:nocache": "hugo --templateMetrics --templateMetricsHints --ignoreCache",
        "index": "gis $SITE_URL",
        "dev": "astro dev",
        "start": "astro dev",
        "build": "astro check && astro build",
        "preview": "astro preview",
        "astro": "astro",
        "lint": "eslint . --report-unused-disable-directives",
        "lint:fix": "eslint --fix ."
    },
    "dependencies": {
        "@astrojs/check": "^0.6.0",
        "@astrojs/mdx": "^3.0.0",
        "@astrojs/react": "^3.3.4",
        "@astrojs/rss": "^4.0.5",
        "@astrojs/sitemap": "^3.1.4",
        "@unocss/astro": "^0.60.2",
        "@unocss/reset": "^0.60.2",
        "@unocss/transformer-directives": "^0.60.2",
        "astro": "^4.8.3",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "sass": "^1.77.1",
        "typescript": "^5.4.5",
        "unocss": "^0.60.2"
    },
    "devDependencies": {
        "@eslint/js": "^9.2.0",
        "@taplo/cli": "^0.7.0",
        "@types/react": "^18.3.2",
        "@types/react-dom": "^18.3.0",
        "eslint": "^8.57.0",
        "eslint-plugin-react": "^7.34.1",
        "globals": "^15.2.0",
        "google-indexing-script": "^0.0.5",
        "markdownlint-cli": "^0.40.0",
        "prettier": "^3.2.5",
        "prettier-plugin-go-template": "^0.0.15",
        "typescript-eslint": "^7.9.0",
        "zhlint": "^0.8.1"
    },
    "packageManager": "pnpm@9.1.0"
}
