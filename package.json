{
    "name": "jiahao-blog",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "format": "pnpm run lint:fix && prettier --write .",
        "format:ci": "pnpm run format -- !.github/**",
        "lint": "eslint src && markdownlint . && zhlint *.md",
        "lint:fix": "eslint src --fix && markdownlint . --fix && zhlint *.md --fix",
        "test": "vitest",
        "test:e2e": "playwright test",
        "playwright:open": "playwright test --ui",
        "coverage": "vitest run --coverage",
        "index": "gis $SITE_URL",
        "build": "astro check --tsconfig tsconfig.build.json && astro build",
        "start": "pnpm run build && astro preview",
        "dev": "astro dev",
        "dev:host": "astro dev --host"
    },
    "dependencies": {
        "@astrojs/check": "^0.7.0",
        "@astrojs/mdx": "^3.0.1",
        "@astrojs/react": "^3.4.0",
        "@astrojs/rss": "^4.0.6",
        "@astrojs/sitemap": "^3.1.5",
        "@iconify-json/fluent-emoji-flat": "^1.1.16",
        "@iconify-json/logos": "^1.1.42",
        "@testing-library/user-event": "^14.5.2",
        "@unocss/reset": "^0.60.3",
        "astro": "^4.9.1",
        "dotenv": "^16.4.5",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "sharp": "^0.33.4",
        "typescript": "^5.4.5",
        "unocss": "^0.60.3",
        "vite": "^5.2.11"
    },
    "devDependencies": {
        "@eslint/js": "^9.3.0",
        "@playwright/test": "^1.44.1",
        "@testing-library/jest-dom": "^6.4.5",
        "@testing-library/react": "^15.0.7",
        "@types/node": "^20.12.12",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@vitest/coverage-v8": "^1.6.0",
        "eslint": "^8.57.0",
        "eslint-plugin-astro": "^1.2.0",
        "eslint-plugin-react": "^7.34.1",
        "globals": "^15.3.0",
        "google-indexing-script": "^0.1.0",
        "jsdom": "^24.0.0",
        "markdownlint-cli": "^0.40.0",
        "prettier": "^3.2.5",
        "prettier-plugin-astro": "^0.14.0",
        "prettier-plugin-toml": "^2.0.1",
        "typescript-eslint": "^7.10.0",
        "vitest": "^1.6.0",
        "zhlint": "^0.8.1"
    },
    "packageManager": "pnpm@9.1.0"
}
