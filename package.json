{
    "name": "jiahao-blog",
    "version": "3.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "format": "prettier --write .",
        "format:ci": "pnpm run format -- !.github/**",
        "lint": "astro check && eslint . && markdownlint . && zhlint *.md",
        "lint:fix": "astro check && eslint . --fix && markdownlint . --fix && zhlint *.md --fix",
        "lint:staged": "lint-staged",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:e2e": "playwright test",
        "playwright:open": "playwright test --ui",
        "coverage": "vitest run --coverage",
        "index": "gis $SITE_URL",
        "build": "astro build",
        "start": "pnpm run build && astro preview",
        "dev": "astro dev",
        "dev:host": "astro dev --host",
        "prepare": "husky"
    },
    "dependencies": {
        "@astrojs/check": "^0.8.0",
        "@astrojs/mdx": "^3.1.0",
        "@astrojs/react": "^3.5.0",
        "@astrojs/rss": "^4.0.6",
        "@astrojs/sitemap": "^3.1.5",
        "@giscus/react": "^3.0.0",
        "@headlessui/react": "^2.1.1",
        "@testing-library/user-event": "^14.5.2",
        "@unocss/reset": "^0.61.0",
        "astro": "^4.9.2",
        "astro-seo": "^0.8.4",
        "classnames": "^2.5.1",
        "dayjs": "^1.11.11",
        "fuzzysort": "^3.0.2",
        "giscus": "^1.5.0",
        "markdown-it": "^14.1.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-icons": "^5.2.1",
        "remark-sectionize": "^2.0.0",
        "sanitize-html": "^2.13.0",
        "sass": "^1.77.6",
        "sharp": "^0.33.4",
        "typescript": "^5.4.5",
        "unocss": "^0.61.0",
        "unocss-preset-theme": "^0.13.0",
        "vite": "^5.3.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.3.0",
        "@commitlint/config-conventional": "^19.2.2",
        "@commitlint/types": "^19.0.3",
        "@eslint/js": "^9.5.0",
        "@estruyf/github-actions-reporter": "^1.7.0",
        "@playwright/test": "^1.44.1",
        "@testing-library/jest-dom": "^6.4.5",
        "@testing-library/react": "^16.0.0",
        "@types/markdown-it": "^14.1.1",
        "@types/node": "^20.14.2",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@types/sanitize-html": "^2.11.0",
        "@vitest/coverage-v8": "^2.0.0",
        "devmoji": "^2.3.0",
        "eslint": "^9.0.0",
        "eslint-plugin-astro": "^1.2.0",
        "eslint-plugin-react": "^7.34.2",
        "globals": "^15.4.0",
        "google-indexing-script": "^0.4.0",
        "husky": "^9.0.11",
        "jsdom": "^24.1.0",
        "lint-staged": "^15.2.7",
        "markdownlint-cli": "^0.41.0",
        "prettier": "^3.3.2",
        "prettier-plugin-astro": "^0.14.0",
        "prettier-plugin-organize-imports": "^4.0.0",
        "prettier-plugin-toml": "^2.0.1",
        "ts-node": "^10.9.2",
        "typescript-eslint": "8.0.0-alpha.51",
        "vitest": "^2.0.0",
        "vitest-mock-extended": "^1.3.2",
        "zhlint": "^0.8.1"
    },
    "packageManager": "pnpm@9.5.0"
}
