---
import type { ImageMetadata } from "astro";
import { SEO, type SEOProps } from "astro-seo";
import { getAbsoluteLocaleUrl } from "astro:i18n";
import { ViewTransitions } from "astro:transitions";
import { BLOG_IMAGE_PLACEHOLDER, DEFAULT_LANGUAGE } from "config";
import type { MultilingualPage } from "interfaces/MultilingualPage";
import { getLanguageAlternates } from "utils/getLanguageAlternates";

export interface Props
    extends Pick<SEOProps, "languageAlternates">,
        MultilingualPage {
    title: string;
    description?: string;
    image?: ImageMetadata;
}

const language = Astro.currentLocale ?? DEFAULT_LANGUAGE;

const {
    title,
    description,
    image = BLOG_IMAGE_PLACEHOLDER,
    languages = [language],
} = Astro.props;

const languageAlternates = getLanguageAlternates(Astro.url.pathname, languages);
---

<SEO
    {title}
    {description}
    charset="utf-8"
    openGraph={{
        basic: {
            type: "website",
            title,
            image: new URL(image.src, Astro.url).toString(),
        },
        optional: {
            description,
        },
    }}
    twitter={{
        card: "summary_large_image",
        title,
        image: new URL(image.src, Astro.url).toString(),
        description,
    }}
    extend={{
        meta: [
            { name: "viewport", content: "width=device-width,initial-scale=1" },
            { name: "twitter:url", content: Astro.url.toString() },
        ],
        link: [
            { rel: "icon", type: "image/svg+xml", href: "/favicon.svg" },
            {
                rel: "alternate",
                type: "application/rss+xml",
                title,
                href: getAbsoluteLocaleUrl(language, "/rss.xml"),
            },
            { rel: "sitemap", href: "/sitemap-index.xml" },
        ],
    }}
    {languageAlternates}
/>

<ViewTransitions />
