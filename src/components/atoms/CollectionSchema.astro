---
import { Schema } from "astro-seo-schema";
import type { ImageCardProps } from "../molecules/ImageCard";

interface Props {
    name: string;
    items: ImageCardProps[];
}

const { name, items } = Astro.props;
---

<Schema
    item={{
        "@context": "https://schema.org",
        "@type": "ItemList",
        name,
        itemListElement: items.map(({ url, title, image }, index) => ({
            "@type": "ListItem",
            position: index + 1,
            item: {
                "@type": "ListItem",
                url,
                name: title,
                image: image?.src,
            },
        })),
    }}
/>
