---
import BackButton from "../components/BackButton";
import BlogArticle from "../components/BlogArticle";
import LinkList from "../components/LinkList";
import SiteFooter from "../components/SiteFooter";
import { BLOG_IMAGE_PLACEHOLDER } from "../config";
import type { BlogData } from "../utils/getBlogs";
import BaseLayout from "./BaseLayout.astro";

type Props = BlogData;

const {
    title,
    description,
    date,
    image = BLOG_IMAGE_PLACEHOLDER,
    links,
    language,
    lastModified,
} = Astro.props;
---

<BaseLayout {title} {description} {image}>
    <div min-w-md lg="grid-sidebars">
        <aside sticky top-0 h-0 z-1 p-6 lg="h-screen justify-self-end">
            <BackButton {language} />
        </aside>

        <div flex="~ col" py-6 gap-y-7>
            <main flex="~ col" max-w-4xl gap-y-7>
                <BlogArticle
                    {title}
                    {description}
                    {date}
                    {lastModified}
                    {image}
                >
                    <slot />
                </BlogArticle>

                <LinkList {links} />
            </main>

            <SiteFooter {language} />
        </div>
    </div>
</BaseLayout>
