---
import type { ImageMetadata } from "astro";
import type { HTMLAttributes } from "astro/types";
import BaseHeader from "components/atoms/BaseHeader.astro";
import { DEFAULT_LANGUAGE } from "config";

interface Props extends HTMLAttributes<"body"> {
    title: string;
    description?: string;
    image?: ImageMetadata;
}

const { title, description, image, ...props } = Astro.props;
---

<!doctype html>
<html lang={Astro.currentLocale ?? DEFAULT_LANGUAGE}>
    <head>
        <BaseHeader {title} {description} {image} />
        <slot name="head" />
    </head>
    <body {...props}>
        <slot />
    </body>
</html>
