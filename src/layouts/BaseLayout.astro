---
import type { ImageMetadata } from "astro";
import BaseHeader from "../components/BaseHeader.astro";
import { DEFAULT_LANGUAGE } from "../config";

interface Props {
    title: string;
    description?: string;
    image?: ImageMetadata;
}

const { title, description, image } = Astro.props;
---

<!doctype html>
<html lang={Astro.currentLocale ?? DEFAULT_LANGUAGE}>
    <head>
        <BaseHeader {title} {description} {image} />
        <slot name="head" />
    </head>
    <body>
        <slot />
    </body>
</html>
