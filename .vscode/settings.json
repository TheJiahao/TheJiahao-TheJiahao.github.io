{
    "files.associations": {
        "*.css": "css",
        "*.yml": "github-actions-workflow"
    },
    "[github-actions-workflow]": {
        "editor.tabSize": 2
    },
    "eslint.useFlatConfig": true,
    "typescript.preferences.autoImportFileExcludePatterns": ["node/test.d.ts"],
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "astro"
    ],
    "typescript.updateImportsOnFileMove.enabled": "never",
    "typescript.preferences.preferTypeOnlyAutoImports": true,
    "typescript.preferences.importModuleSpecifier": "non-relative",
    "json.schemas": [
        {
            "fileMatch": ["release-please-config.json"],
            "url": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json"
        }
    ]
}
